<div class="countUsers">
    <img src="/imgs/user-icon.png" alt="icon">
    <div class="countGreets">
      <p id ="counterTag">{{counting}}</p>
      <p id="userWord">users</p>
    </div>
</div>

<form class="inputCover" action="/greeted" method="post">
  <h2>Greet me</h2>

  {{#if messages.error}}
    <div class="success">
      {{messages.success}}
    </div>
  {{/if}}

  <label for="input">Name:</label>
  <input type="text" name="takeName" value="" id="input"><br>
  <div class="languagediv">
       <input type="radio" name="language" value="Sesotho"> <br>
       <label for="">Sesotho</label>
     </div>

     <div class="languagediv">
       <input type="radio" name="language" value="English"> <br>
       <label for="">English</label>
     </div>

     <div class="languagediv">
       <input type="radio" name="language" value="IsiXhosa"><br>
       <label for="">IsiXhosa</label>
     </div>
     <br>
  <input class="btn" type="submit" name="greet" value="Greet me">
</form>

<div class="display">
  <p id = "greetingSomeone">{{lang}}, {{name}}</p>
</div>
